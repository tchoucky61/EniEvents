@model EniEvents.Areas.Public.Models.IndexVM

<div class="fixed full home">
    <div id="eventMap" class="full"></div>
    <div id="eventSearch" class="fixed orange darken-4">
        @using (Html.BeginForm())
        {
            <div class="row search--title">
                <div class="col s12 white-text bernadette">
                     Vos événements sur Rennes et sa région !
                </div>
            </div>
            <div class="row">
                <div class="col s12 m6 input-field">
                    @Html.EnumDropDownListFor(model => model.Periods, null, null)
                </div>
                <div class="col s12 m6 input-field">
                    @Html.DropDownListFor(model => model.fooSelectedId, Model.Themas.Select(t => new SelectListItem
                   {
                       Text = $"{t.Title}",
                       Value = t.Id.ToString()
                   }), "Tous les thèmes")
                </div>
            </div>
            <div class="row search--result">
                <div class="col l12 white-text">
                    <strong><span class="bernadette circle white orange-text text-darken-4"></span> événement(s) trouvé(s)</strong>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal Structure -->
<div id="modalEventDetail" class="modal modal-fixed-footer">
    <div class="event-title">
    </div>
    <div class="modal-content">
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Fermer</a>
    </div>
</div>