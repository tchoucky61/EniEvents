@model Bo.Event

@{
    ViewBag.Title = "Supprimer un événement";
}

<h2>@ViewBag.Title</h2>

<h3>Êtes-vous sûr de vouloir supprimer l'événement @Html.DisplayFor(model => model.Title) ?</h3>
<div>
    <hr />
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
                        @Html.RouteLink("Annuler", "AdminEventList")
        </div>
    }
</div>
